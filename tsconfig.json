{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "types": [
      "@cloudflare/workers-types/2026-02-20",
      "vite/client"
    ],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
